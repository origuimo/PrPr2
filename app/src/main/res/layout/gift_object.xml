<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wishlistGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:text="@string/gift_wishlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prioGift" />

    <TextView
        android:id="@+id/userGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="136dp"
        android:text="@string/gift_user"
        app:layout_constraintEnd_toStartOf="@+id/wishlistGift"
        app:layout_constraintTop_toBottomOf="@+id/nameGift" />

    <TextView
        android:id="@+id/nameGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="136dp"
        android:text="@string/gift_name"
        app:layout_constraintEnd_toStartOf="@+id/prioGift"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prioGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="64dp"
        android:text="@string/gift_prio"
        app:layout_constraintEnd_toEndOf="@id/priceGift"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/priceGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="64dp"
        android:text="@string/gift_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/linkGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="64dp"
        android:text="@string/gift_link"
        app:layout_constraintEnd_toEndOf="@id/wishlistGift"
        app:layout_constraintTop_toTopOf="@id/nameGift" />

    <TextView
        android:id="@+id/dateGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="64dp"
        android:text="@string/gift_date"
        app:layout_constraintEnd_toEndOf="@id/reservedGift"
        app:layout_constraintTop_toTopOf="@id/userGift" />

    <TextView
        android:id="@+id/reservedGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="64dp"
        android:text="@string/gift_reserved"
        app:layout_constraintEnd_toEndOf="@id/dateGift"
        app:layout_constraintTop_toTopOf="@id/nameGift" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nameGift"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>